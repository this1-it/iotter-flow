<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	updateCheck="true"
	monitoring="autodetect" dynamicConfig="true">
	<!-- 
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" 
	<diskStore path="java.io.tmpdir" /> defaultCache configuration with 
		an implicit name "default" which is a reserved cache name. This cache will 
		be applied to caches created programmatically -->
	<defaultCache maxEntriesLocalHeap="100" eternal="false"
		timeToIdleSeconds="120" timeToLiveSeconds="120" diskSpoolBufferSizeMB="30"
		maxEntriesLocalDisk="1000" diskExpiryThreadIntervalSeconds="120"
		memoryStoreEvictionPolicy="LFU">
		<persistence strategy="localTempSwap"/>
	</defaultCache> 

	<!-- Cache contain a maximum in memory of maxEntriesLocalHeap elements, 
		and will expire an element if it is idle for more than timeToIdleSeconds 
		and lives for more than timeToLiveSeconds. If there are more than maxEntriesLocalHeap 
		elements it will overflow to the disk cache, which in this configuration 
		will go to wherever java.io.tmp is defined on your system. Least Recently 
		Used (LRU) Discards the least recently used items first. Least Frequently 
		Used (LFU) Counts how often an item is needed. Those that are used least 
		often are discarded first. -->
	<cache name="unit_of_measure" maxEntriesLocalHeap="255" eternal="false"
		timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="unit_of_measure_code" maxEntriesLocalHeap="255"
		eternal="false" timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="role" maxEntriesLocalHeap="10" eternal="false"
		timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>
	
	<cache name="device" maxEntriesLocalHeap="4000" eternal="false"
		timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="modbus_registers" maxEntriesLocalHeap="1000" eternal="false"
		timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="datasink" maxEntriesLocalHeap="4000" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="500"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="data_values" maxEntriesLocalHeap="400" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="900"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="ticks" maxEntriesLocalHeap="500" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="900"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="timestamps" maxEntriesLocalHeap="20" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="900"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<cache name="messages" maxEntriesLocalHeap="200000" eternal="false"
		timeToIdleSeconds="43200" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU">
	</cache>


</ehcache>